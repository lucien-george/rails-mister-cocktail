<div class="wrapper">
  <div class="banner text-center" style="background-image: url(https://images.pexels.com/photos/110472/pexels-photo-110472.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
      <p><span id="banner-typed-text"></span></p>
  </div>
  <div class="container">
    <div class="row">

    </div>
    <h1 class="text-center">All Cocktails</h1>
    <% if Cocktail.count != @cocktails.count %>
      <% if @cocktails.count.zero? %>
        <p>We haven't found any cocktails matching your search.</p>
      <% elsif @cocktails.count == 1 %>
        <p>We found <%= @cocktails.count %> cocktail.</p>
      <% else %>
        <p>We found <%= @cocktails.count %> cocktails.</p>
      <% end %>
    <% end %>
    <ul class="list-group">
      <% @cocktails.each do |cocktail| %>
        <li class="list-group-item"><h4><%= link_to cocktail.name, cocktail_path(cocktail), class:"cocktail-list-link" %></h4>
          <ul>
            <% cocktail.doses.each do |dose| %>
              <li><strong><%= dose.ingredient.name %></strong> - <%= dose.description %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</div>
